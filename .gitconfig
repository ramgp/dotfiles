[push]
  default = current
[core]
  trustctime = false
  autocrlf = input
  editor = "subl -n -w"
  filemode = false
[user]
  name = Ramon Garcia-Perez
  email = ramgarcia@outlook.com
[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
[merge]
  tool = vimdiff
[mergetool]
  keeptemporaries = false
  keepbackups = false
  prompt = false
  trustexitcode = false
[alias]
  last = log -1 --stat
  a = add
  ca = commit -a
  cam = commit -am
  cm = commit -m
  s = status
  co = checkout
  cob = checkout -b
  pu = push -u
  df = diff
  dft = difftool
  mgt = mergetool
  cp = cherry-pick
  cl = clone
  sst = status -sb
  lg2 = log -p
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  br = branch
  unstage = reset HEAD --
  undocommit = reset HEAD~
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  lh = rev-parse --short HEAD
